<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>

<FlowPane alignment="CENTER" columnHalignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" orientation="VERTICAL" prefHeight="250.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <FlowPane alignment="CENTER" columnHalignment="CENTER">
         <children>
            <Label text="          Pseudo :">
               <padding>
                  <Insets right="5.0" />
               </padding>
            </Label>
            <TextField fx:id="inputPseudoConnexion" onAction="#buttonConnexion" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </FlowPane>
      <FlowPane alignment="CENTER" columnHalignment="CENTER">
         <children>
            <Label text="Mot de passe :">
               <padding>
                  <Insets right="5.0" />
               </padding>
            </Label>
            <PasswordField fx:id="inputPasswordConnexion" onAction="#buttonConnexion" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </FlowPane>
      <FlowPane alignment="CENTER" columnHalignment="CENTER">
         <children>
            <Button contentDisplay="TOP" mnemonicParsing="false" fx:id="buttonConnexionID" onAction="#buttonConnexion" text="Se connecter" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </FlowPane>
   </children>
</FlowPane>
